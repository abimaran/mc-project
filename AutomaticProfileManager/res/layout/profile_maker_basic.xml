<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="330dp">
  
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Profile Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/txtProfName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ringing Tone"
        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="4dp" android:layout_marginTop="4dp"/>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode"
            android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="4dp"/>

        <Spinner
            android:id="@+id/spinRingMode"
            android:layout_width="170dp"
            android:layout_height="wrap_content" android:layout_marginLeft="4dp"
            android:entries="@array/phone_mode" android:minWidth="150dp"/>

        <Button
            android:id="@+id/btnSelectRingTone"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tone" />

    </TableRow>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volume"
        android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="4dp" android:layout_marginTop="4dp"/>

    <SeekBar
        android:id="@+id/seekBarRingtone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:text="Notification Tone"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode"
            android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="4dp"/>

        <!--  <Spinner
            android:id="@+id/spinSelectNotiMode"
            android:layout_width="170dp"
            android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:minWidth="150dp"
            android:entries="@array/phone_mode"/>-->

        <Button
            android:id="@+id/btnSelectNotiTone"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tone" />
    </TableRow>

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Volume"
        android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginTop="4dp"/>

    <SeekBar
        android:id="@+id/seekBarNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:text="Media"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Volume"
        android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginTop="4dp"/>

    <SeekBar
        android:id="@+id/seekBarMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>

    
</LinearLayout>
</ScrollView>

<TableRow
    android:id="@+id/tableRow3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp" >

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Save" />
        <Button
            android:id="@+id/btnCancelProfile"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Cancel" />

    </TableRow>

</LinearLayout>

    
